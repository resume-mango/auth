{
  "name": "auth",
  "version": "1.0.0",
  "description": "Authorization server - Openid connect protocol",
  "main": "server.js",
  "scripts": {
    "start": "node ./build/bundle.js",
    "lint": "tsc --noEmit && eslint . --ext .ts",
    "dev": "nodemon -r dotenv/config src/server.ts dotenv_config_path=./.env.development --exec ts-node src/server.ts",
    "dev:build": "webpack --config ./webpack/webpack.config.js --env NODE_ENV=development",
    "dev:watch": "nodemon ./build/bundle.js --watch build",
    "build": "webpack --config ./webpack/webpack.config.js --env NODE_ENV=production",
    "test": "jest --forceExit --runInBand --silent",
    "test:dev": "jest --coverage --forceExit --runInBand",
    "test:watch": "jest --watch --verbose false --forceExit --runInBand",
    "test:e2e": "nodemon -r dotenv/config src/server.ts dotenv_config_path=./.env.staging --exec ts-node src/server.ts"
  },
  "author": "Kundan  Bhosale",
  "license": "ISC",
  "dependencies": {
    "axios": "^0.23.0",
    "chalk": "^4.1.2",
    "connect-redis": "^6.1.3",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "csurf": "^1.11.0",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "express-openid-connect": "^2.9.0",
    "express-rate-limit": "^6.0.4",
    "helmet": "^5.0.0",
    "http-errors": "^1.8.0",
    "ioredis": "^4.28.0",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "@faker-js/faker": "^7.3.0",
    "@types/connect-redis": "^0.0.18",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.12",
    "@types/csurf": "^1.11.2",
    "@types/express": "^4.17.13",
    "@types/express-rate-limit": "^5.1.3",
    "@types/http-errors": "^1.8.1",
    "@types/ioredis": "^4.28.1",
    "@types/jest": "^28.1.3",
    "@types/morgan": "^1.9.3",
    "@types/node": "^16.11.6",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "clean-webpack-plugin": "^4.0.0",
    "dotenv-webpack": "^7.1.0",
    "eslint": "^8.0.1",
    "jest": "^28.1.2",
    "nodemon": "^2.0.13",
    "npm-run-all": "^4.1.5",
    "ts-jest": "^28.0.8",
    "ts-loader": "^4.5.0",
    "ts-node": "^10.3.0",
    "typescript": "^4.4.4",
    "webpack": "^5.61.0",
    "webpack-cli": "^4.9.1",
    "webpack-merge": "^5.8.0",
    "webpack-node-externals": "^3.0.0"
  }
}
