<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Resume Mango</title>
  </head>

  <style>
    main {
      display: flex;
      align-items: center;
      justify-content: center;
      min-height: 100vh;
      max-height: 100vh;
      font-size: 16px;
      font-family: Arial, Helvetica, sans-serif;
      width: 100%;
      height: 100%;
    }
    @keyframes spin {
      to {
        transform: rotate(360deg);
      }
    }
    .spinner {
      display: inline-block;
      width: 2.5rem;
      height: 2.5rem;
      border: 4px solid rgba(240, 132, 56, 0.3);
      border-radius: 50%;
      border-top-color: rgba(240, 132, 56, 1);
      animation: spin 1s ease-in-out infinite;
      margin-bottom: 1rem;
    }
    .wrapper {
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
    }

    .wrapper p {
      color: #343434;
      text-transform: capitalize;
    }

    @keyframes dots {
      0%,
      20% {
        color: rgba(0, 0, 0, 0);
        text-shadow: 0.25em 0 0 rgba(0, 0, 0, 0), 0.5em 0 0 rgba(0, 0, 0, 0);
      }
      40% {
        color: #343434;
        text-shadow: 0.25em 0 0 rgba(0, 0, 0, 0), 0.5em 0 0 rgba(0, 0, 0, 0);
      }
      60% {
        text-shadow: 0.25em 0 0 #343434, 0.5em 0 0 rgba(0, 0, 0, 0);
      }
      80%,
      100% {
        text-shadow: 0.25em 0 0 #343434, 0.5em 0 0 #343434;
      }
    }
    .loading-dots {
      display: inline-flex;
      margin: 0;
      color: #343434;
    }

    .loading-dots::after {
      content: '.';
      margin-left: 0.1rem;
      animation: dots 1s steps(5, end) infinite;
    }
  </style>
  <body>
    <script>
      document.addEventListener('DOMContentLoaded', function (event) {
        console.log('Ready!')
      })
    </script>
    <main>
      <div class="wrapper">
        <div class="spinner"></div>
        <!-- <p class="loading-dots">Loading</p> -->
      </div>
    </main>
  </body>
</html>
